<% if logged_in? %>
  <% if @book.liked_user.include? current_user %>
    <% like = @book.likes.where(user_id: current_user.id).first %>
    <%= link_to book_like_path(@book, like.id), remote: true, method: :delete do %>
      <button class="btn btn-default"><i class="fa fa-thumbs-down"> Unlike</i></button>
    <% end %>
  <% else %>
    <%= link_to book_likes_path(@book), remote: true, method: :post do %>
      <button class="btn btn-default"><i class="fa fa-thumbs-up"></i> Like</i></button>
    <% end %>
  <% end %>
<% end %>
<br>
<%= @book.likes.count %> likes
