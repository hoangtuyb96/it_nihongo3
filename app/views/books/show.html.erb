<% provide(:title, @book.title) %>

<div class="single-product-area section-padding-100 clearfix">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-lg-7">
        <div class="single_product_thumb">
          <div id="product_details_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <a class="gallery_img" href="img/product-img/pro-big-1.jpg">
                  <% if @book.picture.present? %>
                    <%= cl_image_tag(@book.picture, class:"d-block w-100") %>
                  <% else %>
                    <%= image_tag("default_book.jpg", class:"d-block w-100") %>
                  <% end %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-5">
        <div class="single_product_desc">
          <div class="product-meta-data">
            <div class="line"></div>
            <!-- <p class="product-price">$180</p> -->
            <%= link_to @book do %>
              <h6><%= @book.title %></h6>
            <% end %>
            <div class="ratings-review mb-15 d-flex align-items-center justify-content-between">
              <div class="ratings">
                  <%= rating_for @book, "quality", star: 5,  disable_after_rate: false, cancel: true %>
                  Total vote: <%= @book.rates("quality").count %>
                  <br>
                  <% unless @book.rates("quality").count == 0 %> 
                    Average Score: <%= @book.average("quality").avg %>
                  <% end %>
              </div>
              <div class="review">
                <div id="like-form">
                  <%= render "likes/like_form" %><br>
                </div>
                <% if logged_in? %>
                  <%= link_to "Write A Review", book_generate_comment_form_path(@book), remote: true %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="short_overview my-5" id="form">
            <%= render "information" %>
          </div>
          <div id="comment_div">
            <%= render "comment_div" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
