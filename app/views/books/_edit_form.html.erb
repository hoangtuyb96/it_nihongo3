<%= form_for(@book) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class:"form-control" %>

  <%= f.label :author %>
  <%= f.text_field :author, class:"form-control" %>

  <%= f.label :issue_date %>
  <%= f.date_field :issue_date, class:"form-control" %>

  <%= f.label :publishing_company %>
  <%= f.text_field :publishing_company, class:"form-control" %>

  <%= f.label :category %><br>
  <%= f.select :category_id, Category.all.collect { |p| [ p.category_name, p.id ] }, {}, {class: "w-100"} %>

  <%= f.label :description %><br>
  <%= f.text_area :description, class:"form-control" %>

  <%= f.label :picture %><br>
  <%= f.file_field :picture %><br><br>

  <%= f.submit "Edit Book", class:"btn btn-warning" %>
<% end %>
